@page
@model MyRshop.Pages.Admin.ManageClassProgram.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>برنامه کلاس ها</h1>

<p>
    <a asp-page="Create">برنامه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].BiginEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].BiginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].HoleTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassProgram[0].Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ClassProgram) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiginEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoleTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">جزیات</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
