@page
@model MyRshop.Pages.Admin.ManageClassProgram.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<h4>برنامه کلاسی</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassProgram.Id" />
            <div class="form-group">
                <label asp-for="ClassProgram.Days" class="control-label"></label>
                <input asp-for="ClassProgram.Days" class="form-control" />
                <span asp-validation-for="ClassProgram.Days" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.BiginEndTime" class="control-label"></label>
                <input asp-for="ClassProgram.BiginEndTime" class="form-control" />
                <span asp-validation-for="ClassProgram.BiginEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.BiginDate" class="control-label"></label>
                <input asp-for="ClassProgram.BiginDate" class="form-control" />
                <span asp-validation-for="ClassProgram.BiginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.HoleTime" class="control-label"></label>
                <input asp-for="ClassProgram.HoleTime" class="form-control" />
                <span asp-validation-for="ClassProgram.HoleTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.TeacherName" class="control-label"></label>
                <input asp-for="ClassProgram.TeacherName" class="form-control" />
                <span asp-validation-for="ClassProgram.TeacherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.Capacity" class="control-label"></label>
                <input asp-for="ClassProgram.Capacity" class="form-control" />
                <span asp-validation-for="ClassProgram.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassProgram.ProductId" class="control-label"></label>
                <select asp-for="ClassProgram.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ClassProgram.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">برگشت به لیست برنامه ها</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
