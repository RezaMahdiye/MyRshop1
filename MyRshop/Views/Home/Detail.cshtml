@model DetailsViewModel
@{
    ViewData["Title"] = "کالا" + Model.Product.Name;

}

<div>
    <h1 class="display-5">
        @Model.Product.Name
    </h1>
    <hr />
    <img src="@($"/images/{Model.Product.Id}.jpg")"
         alt="@Model.Product.Name"
         class="img-thumbnail" />
    <div class="" id="editor1" style="padding-top:30px;" class="py-5 text-justify"> @Html.Raw(Model.Product.Description)    </div>
    <div class="h2" onshow="" id="price" style="padding-top:30px;">قیمت فقط:@Model.Product.Item.Price تومان</div>
    <dl>
        @foreach (var item in Model.Categoreis)
        {
            <dt><a>@item.Name</a></dt>
            <dd>@item.Description</dd>


        }
    </dl>
    <div>
        <a style="padding-top:20px;"
           class="btn btn-primary"
           asp-controller="CourseAccounting"
           asp-action="Accounting"
           asp-route-programId="@Model.Product.Id">  نمایش برنامه کلاسی</a>
        @*<a class="btn btn-primary"
            asp-controller="Home"
            asp-action="AddToCart"
            asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>*@
    </div>
</div>
<script>
    $(document).ready(
        $('#price').load( function () {
       var va = $('#price').text();
            alert(va);
        });

    

</script>
