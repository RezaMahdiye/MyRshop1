@model MyRshop.Models.ServiceViewModel
@{
    ViewData["Title"] = "خدمات";
}

<h1>خدمات ما</h1>
<h5>لطفا اطلاعات خود را وارد کنید تا در اسرع وقت با شما تماس گرفته شود:</h5>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponyName" class="control-label"></label>
                <input asp-for="ComponyName" class="form-control" />
                <span asp-validation-for="ComponyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت درخواست" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

